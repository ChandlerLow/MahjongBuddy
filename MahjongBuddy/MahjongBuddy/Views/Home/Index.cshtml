@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head
{
    <script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
    @*<script src="/signalr/hubs"></script>*@
}
<div ng-controller="MahjongController">
    <div id="WaitingRoom" class="container" ng-hide="gameIsReady">
        <div class="row">       
            <div class="col-md-5"></div>     
            <div class="col-md-1"><input type="text" id="usernameTB" class="form-control" /></div>
            <div class="col-md-1"><input type="button" id="join" value="join" ng-disabled="isDisonnected" ng-click="join()" class="btn-primary"></div>
            <div class="col-md-5"></div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8"><label id="gameStatus"></label></div>
            <div class="col-md-2"></div>
        </div>
    </div><!--end of Waiting Room-->

    <div id="GameRoom" class="container" ng-show="gameIsReady">

    <!--start for Top Player-->
        <div id="TopPlayer" class="row">
            <div class="col-md-12" style="text-align: center">
                <div class="row">
                    Player: {{topPlayer.Name}}
                </div>

                <div class="row HorizontalContainer">
                    <div class="tileHorizontalContainer" ng-repeat="tile in game.Board.Tiles | filter: {Owner : 'graveyard-' + topPlayer.ConnectionId}: true">
                        <img class="tileHorizontal rotate180" ng-src="{{tile.Image}}" />
                    </div>
                </div>

                <div class="row">
                    <div class="tileHorizontalContainer" ng-repeat="tile in game.Board.Tiles | filter: {Owner : topPlayer.ConnectionId}: true">
                        <img class="tileHorizontal" src="~/Content/images/tiles/64px/face-down-64px.png" />
                    </div>
                </div>
            </div>
        </div>
    <!--end of Top Player-->

        <div id="MidSection" class="row">

            <!--start for Left Player-->
                <div id="LeftPlayer">

                    <div class="col-md-1">
                        <span class="rotate90container">
                            <span class="rotate90">Player Name: {{leftPlayer.Name}}</span>
                        </span> 
                    </div>

                    <div class="col-md-1">
                        <div class=" tileVerticalContainer rotate90" ng-repeat="tile in game.Board.Tiles | filter: {Owner : 'graveyard-' + leftPlayer.ConnectionId}: true">
                            <img class="tileVertical" ng-src="{{tile.Image}}" />
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="tileVerticalContainer rotate90" ng-repeat="tile in game.Board.Tiles | filter: {Owner : leftPlayer.ConnectionId}: true">
                            <img class="tileVertical" src="~/Content/images/tiles/64px/face-down-64px.png" />
                        </div>
                    </div>
                </div>
            <!--end of LeftPlayer-->

            <!--start for Board-->
                <div id="TheBoard" class="col-md-6">
                    <strong>Discarded Tiles</strong>
                    <div id="discardedTiles">
                        <div class="tileHorizontalContainer" ng-repeat="tile in game.Board.Tiles | filter: {Owner : 'graveyard'}: true | orderBy: 'Counter'">
                            <img class="tileHorizontal" ng-src="{{tile.Image}}" />
                        </div>
                    </div>
                </div>
            <!--end of Board-->

            <!--start for Right Player-->
                <div id="RightPlayer">
                    <div class="col-md-1">
                        <div class="tileVerticalContainer rotateMinus90" ng-repeat="tile in game.Board.Tiles | filter: {Owner : rightPlayer.ConnectionId}: true">
                            <img class="tileVertical" src="~/Content/images/tiles/64px/face-down-64px.png" />
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div class="tileVerticalContainer rotateMinus90" ng-repeat="tile in game.Board.Tiles | filter: {Owner : 'graveyard-' + rightPlayer.ConnectionId}: true">
                            <img class="tileVertical" ng-src="{{tile.Image}}" />
                        </div>
                    </div>

                    <div class="col-md-1"> 
                        <span class="rotate90container">
                            <span class="rotateMinus90">Player Name = {{rightPlayer.Name}}</span>
                        </span>                     
                    </div>
                </div>
            <!--end of Right Player-->
        </div>


    <!--start for Main Player-->
        <div id="BottomPlayer" class="col-md-12" style="text-align: center">

            <div id="playerCommand">
                <input type="button" ng-disabled="!isMyturn" id="flower" value="flower" class="btn-primary" ng-click="fnPlayerMove('flower', 0)">
                <input type="button" ng-disabled="!isMyturn" id="noFlower" value="noFlower" class="btn-primary" ng-click="fnPlayerMove('noflower' , 0)">
                <input type="button" ng-disabled="!isMyturn || !currentPlayer.CanPickTile" id="pick" value="pick" class="btn-primary" ng-click="fnPlayerMove('pick', 0)">
                <input type="button" ng-disabled="!isMyturn" id="throw" value="throw" class="btn-primary" ng-click="fnPlayerMove('throw', selectedTileId)">
                <input type="button" ng-disabled="!isMyturn" id="chow" value="chow" class="btn-primary" ng-click="fnPlayerMove('chow', 0)">
                <input type="button" ng-disabled="!isMyturn" id="pong" value="pong" class="btn-primary" ng-click="fnPlayerMove('pong', 0)">
                <input type="button" ng-disabled="!isMyturn" id="kong" value="kong" class="btn-primary" ng-click="fnPlayerMove('kong', 0)">
                <input type="button" ng-disabled="!isMyturn" id="win" value="win" class="btn-primary" ng-click="fnPlayerMove('win', 0)">
            </div>

            <div id="activeTiles">
                <div class="tileHorizontalContainer" ng-repeat="tile in game.Board.Tiles | filter: {Owner : currentUserId}: true | orderBy: ['Type', 'Value']">
                    <img ng-click="fnSelectTile(tile.Id)" class="tileHorizontal" ng-src="{{tile.Image}}" />
                </div>
            </div>

            <div style="clear:both"></div>

            <div id="myGraveyardTiles" class="HorizontalContainer">
                <div class="tileHorizontalContainer" ng-repeat="tile in game.Board.Tiles | filter: {Owner : 'graveyard-' + currentUserId}: true">
                    <img class="tileHorizontal" ng-src="{{tile.Image}}" />
                </div>
            </div>

            <div style="clear:both"></div>

            <div>
                <label id="playerWind">{{currentPlayerWind}}</label>
                <label id="isMyTurn">t: {{isMyturn}}</label>
                <label id="canPickTile">p: {{currentPlayer.CanPickTile}}</label>
                <label id="warningMessage">p: {{warningMessage}}</label>
            </div>
    <!--end of Main Player-->
    
    </div><!--end of GameRoom-->
</div>
